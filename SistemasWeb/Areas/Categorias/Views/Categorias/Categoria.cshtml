
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Categorias</h1>
<p>
    @*El data-target ="#modal1" enlaza con la id="modal1"*@

    <a data-toggle='modal' data-target='#modal1' class='btn btn-info text-white'>Crear categoria</a>
</p>
<div class="modal fade" data-backdrop="static" id="modal1" tabindex="-1"
     role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="myModalLabel">Agregar categoria</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        </div>
        @*Desde el Area Categorias pasa por el Controller Categorias hasta el metodo del mismo controlador denominado "GetPost"*@
        
        <form method="post" asp-area="Categorias" asp-controller="Categorias" asp-action="GetPost">
            <div class="modal-body">
                <div class="form-horizontal">
                    <div class="form-group">
                        <label asp-for="Input.Nombre" class="col-md-2 control-label"></label>
                        <div class="col-md-10">
                            <input asp-for="Input.Nombre" placeholder="Nombre" class="form-control" />

                            <span asp-validation-for="Input.Nombre" placeholder="nombre" class="text-danger"></span>


                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>